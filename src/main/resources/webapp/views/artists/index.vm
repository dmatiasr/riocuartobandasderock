<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="card-header col-md-12 remove-vertical-padding" data-background-color="green">
            <table class="table">
              <tr>
                <td>
                  <h4 class="title">Listado de todos los artistas</h4>
                </td>
                <td>
                  <a href="/artists/new" class="btn btn-default pull-right">
                    <i class="material-icons">playlist_add</i>
                    Crear Artista
                  </a>
                </td>
              </tr>
            </table>
          </div>
          <div class="card-content table-responsive">
            #if ($success != $null)
              <div class="alert alert-success" role="alert">
                <strong>Nuevo Artista</strong> $success
              </div>
              <br>
            #end

            <table id="dashboard-artists-datatable" data-url="/artists/datatable" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Apodo</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('li').removeClass('active');
    $('#artist').addClass('active');

    $('a').on('click', function(event){
      event.preventDefault();
      var id = this.id
      $.ajax({
        url: "/artists/"+id,
        method: "delete"
      }).done(function() {
        window.location.replace("/artists");
      });
    })
  });
</script>
