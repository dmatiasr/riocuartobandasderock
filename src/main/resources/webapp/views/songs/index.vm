<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="card-header col-md-12 remove-vertical-padding" data-background-color="green">
            <table class="table">
              <tr>
                <td>
                  <h4 class="title">Listado de todas las canciones</h4>
                </td>
                <td>
                  <a href="/songs/new" class="btn btn-warning pull-right">
                    <i class="material-icons">playlist_add</i>
                    Crear Canción
                  </a>
                </td>
              </tr>
            </table>
          </div>
          <div class="card-content table-responsive">
            #if ($success != $null)
              <div class="alert alert-success" role="alert">
                <strong>Nueva Canción</strong> $success
              </div>
              <br>
            #end
            <table class="table table-hover">
              <thead class="text-success">
                <th>Nombre</th>
                <th>Genero</th>
                <th>Acciones</th>
              </thead>
              <tbody>
                #if ($bands != $null)
                  #foreach( $band in $bands )
                    <tr>
                      <td>$band.getName()</td>
                      <td>$band.getGenre()</td>
                      <td>
                        <a href="/bands/$!{band.getId()}">
                          <i class="material-icons">remove_red_eye</i>
                        </a>
                        <a href="/bands/$!{band.getId()}/edit">
                          <i class="material-icons">edit</i>
                        </a>
                        <a href="/bands/$!{band.getId()}" method="delete">
                          <i class="material-icons">close</i>
                        </a>
                      </td>
                    </tr>
                  #end
                #else
                  <tr>
                    <td colspan="3">No hay ninguna banda cargada en el sistema</td>
                  </tr>
                #end
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('li').removeClass('active');
    $('#song').addClass('active');
  });
</script>
