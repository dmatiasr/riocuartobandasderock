<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="card">
        #if ($error != $null)
          <div class="alert alert-danger" role="alert">
            <strong>Error!</strong> $error
          </div>
          <br>
        #end
        <div class="card-header" data-background-color="green">
          <h4 class="title">Modificar Album</h4>
          <p class="category">Complete el formulario</p>
        </div>
        <div class="card-content">
          <form action="/albums" id="form" class="$!{id}">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">TÃ­tulo</label>
                  <input type="text" class="form-control" name="title" id="title" value="$!{album_title}">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">Lanzamiento</label>
                  <input type="date" class="form-control" name="release_date" id="release_date" value="$!{release_date}">
                </div>
              </div>
            </div>
            <input type="hidden" name="band_id" id="band_id" value="$!{band_id}">
            <div class="row text-center">
              <button type="submit" class="btn btn-success" id="submit">Actualizar</button>
            </div>
            <div class="clearfix"></div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('li').removeClass('active');
    $('#album').addClass('active');
    var id = $('#form').attr('class');

    $('#submit').on('click', function(event){
      event.preventDefault();
      var input_title = $('#title').val();
      var input_release_date = $('#release_date').val();
      var input_band_id = $('#band_id').val();
      $.ajax({
        url: "/albums/"+id,
        method: "put",
        data: {
          title: input_title,
          release_date: input_release_date,
          band_id: input_band_id
        }
      }).done(function() {
        window.location.replace("/albums/"+id);
      });
    })
  });
</script>
