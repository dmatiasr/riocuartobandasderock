<div id="albumId"></div>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="card-header col-md-12 remove-vertical-padding" data-background-color="green">
            <table class="table">
              <tr>
                <td>
                  <h4 class="title">Listado de todos los álbumes</h4>
                </td>
                <td>
                  <a href="/albums/new" class="btn btn-default pull-right">
                    <i class="material-icons">playlist_add</i>
                    Crear Álbum
                  </a>
                </td>
              </tr>
            </table>
          </div>
          <div class="card-content table-responsive">
            #if ($success != $null)
              <div class="alert alert-success" role="alert">
                <strong>Nuevo Album</strong> $success
              </div>
              <br>
            #end

            <table id="dashboard-albums-datatable" data-url="/albums/datatable" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Titulo</th>
                  <th>Lanzamiento</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <div id="alert"></div>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>