<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        #if ($error != $null)
          <div class="alert alert-danger" role="alert">
            <strong>Error!</strong> $error
          </div>
          <br>
        #end
        <div class="card-header" data-background-color="green">
          <h4 class="title">Modificar Banda</h4>
          <p class="category">Complete el formulario</p>
        </div>
        <div class="card-content">
          <form action="/bands" method="put" id="form" class="$!{id}">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">Nombre</label>
                  <input type="text" class="form-control" name="name" id="name" value="$!{name}">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">GÃ©nero</label>
                  <input type="text" class="form-control" name="genre" id="genre" value="$!{genre}">
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">Fecha de Inicio</label>
                  <input type="text" class="form-control" name="start_at">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">Fecha de Fin</label>
                  <input type="text" class="form-control" name="end_at">
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-success pull-right">Actualizar</button>
            <div class="clearfix"></div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  #include("vendor/jquery/jquery.min.js")
  $(document).ready(function() {
    $('li').removeClass('active');
    $('#band').addClass('active');
    var id = $('#form').attr('class');

    $('#submit').on('click', function(event){
      event.preventDefault();
      var input_name = $('#name').val();
      var input_genre = $('#genre').val();
      $.ajax({
        url: "/bands/"+id,
        method: "put",
        data: {
          name: input_name,
          genre: input_genre }
      }).done(function() {
        window.location.replace("/bands/"+id);
      });
    })
  });
</script>

