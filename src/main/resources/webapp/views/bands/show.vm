<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Datos de la Banda</h4>
    </div>
    <div class="modal-body">
      <strong>Nombre</strong>
      <h5>$band.getName()</h5>

      <strong>Género al que pertenece</strong>
      #if($band.getGenre() != $null)
        <h5>$band.getGenre()</h5>
      #else
        <h5>La banda no contiene ningun género asociado</h5>
      #end

    </div>
    <div class="modal-footer">
      <a href="/bands" type="button" class="btn btn-default" data-dismiss="modal">Volver</a>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('li').removeClass('active');
    $('#band').addClass('active');
  });
</script>
